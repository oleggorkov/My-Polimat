include ../../control-elements/buttons/btn-main
include ../../control-elements/inputs/input-main
include ../../control-elements/checkbox/checkbox
include ../../control-elements/radio-button/radio-button
include ../../breadcrumbs/breadcrumbs

block reg-buyer
    section.section
        div.section__wrapper
            +breadcrumbs('Регистрация')
            form.reg-buyer
                div.reg-buyer__block
                    h1.reg-buyer__block-heading  Регистрация
                    div.reg-buyer__block-radio
                        div.reg-buyer__block-radio-button
                            +radio-btn('Юридическое лицо', 'radio-company', 'customer',
                                'buyer', ['radio-label', 'radio-input', 'radio-label--check'])
                        div.reg-buyer__block-radio-button
                            +radio-btn('Индивидуальный предприниматель', 'radio-private', 'customer', 'private',
                                ['radio-label', 'radio-input', 'radio-label--check'])
                        div.reg-buyer__block-radio-button
                            +radio-btn('Я частный покупатель', 'radio-buyer', 'customer', 'buyer',
                                ['radio-label', 'radio-input', 'radio-label--check'])
                    div.reg-buyer__form
                        div.reg-buyer__form-flex
                            div.reg-buyer__form-flex-item
                                div.reg-buyer__form-flex-item--title   ФИО
                                div.reg-buyer__form-flex-item--input
                                    +input-main()
                            div.reg-buyer__form-flex-item
                                div.reg-buyer__form-flex-item--title   Телефон
                                div.reg-buyer__form-flex-item--input
                                    +input-main(type='tel')
                            div.reg-buyer__form-flex-item
                                div.reg-buyer__form-flex-item--title   E-mail
                                div.reg-buyer__form-flex-item--input
                                    +input-main(type='email')
                        div.reg-buyer__form-flex
                            div.reg-buyer__form-flex-item
                                h3.reg-buyer__form-flex-item--heading   Адрес доставки
                                div.reg-buyer__form-flex-item--title   Населенный пункт
                                div.reg-buyer__form-flex-item--input
                                    +input-main()
                            div.reg-buyer__form-flex-item
                                div.reg-buyer__form-flex-item--title   Улица
                                div.reg-buyer__form-flex-item--input
                                    +input-main()
                            div.reg-buyer__form-flex-item
                                div.reg-buyer__form-flex-item-flex
                                    div.reg-buyer__form-flex-item--input_small
                                        div.reg-buyer__form-flex-item--title   Дом, стр./корп.
                                        +input-main()
                                    div.reg-buyer__form-flex-item--input_small
                                        div.reg-buyer__form-flex-item--title    офис/кв.
                                        +input-main()
                                    div.reg-buyer__form-flex-item--input_small
                                        div.reg-buyer__form-flex-item--title   Индекс
                                        +input-main(placeholder='000000')
                        div.reg-buyer__form-flex
                            div.reg-buyer__form-flex-item
                                div.reg-buyer__form-flex-item--title   Пароль
                                div.reg-buyer__form-flex-item--input
                                    +input-main(type='password')
                            div.reg-buyer__form-flex-item
                                div.reg-buyer__form-flex-item--title   Повторите пароль
                                div.reg-buyer__form-flex-item--input
                                    +input-main(type='password')
                div.reg-buyer__button
                    +btn-main(class='btn--other btn--blue')    Подтвердить регистрацию
