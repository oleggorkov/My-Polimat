include ../../control-elements/buttons/btn-main
include ../../control-elements/inputs/input-main
include ../../breadcrumbs/breadcrumbs

block password
        section.section.password
            div.section__wrapper
                +breadcrumbs('Восстановление пароля')
                form.password-form
                    h1.password-form__heading Востановление пароля
                    div.password-form__input
                        +input-main(type='email' placeholder='Ваш e-mail при регистрации')
                    div.password-form__text    Мы отправил вам ссылку на Email для создания нового пароля
                    div.password-form__button
                        +btn-main(class='btn--other btn--blue-invert')    Восстановить пароль
                    a(href="#").password-form__link Авторизация