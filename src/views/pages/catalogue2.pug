extends ../layouts/default
include ../../modules/cart/cart
include ../../modules/control-elements/buttons/btn-main
include ../../modules/to-top/to-top-btn
include ../../modules/catalogue-head/catalogue-head
include ../../modules/breadcrumbs/breadcrumbs

block helper-blocks
    include ../../modules/filter-menu/filter-menu
    include ../../modules/catalogue__sort-menu/catalogue__sort-menu

block content
    section.section.catalogue
        div.section__wrapper
            +breadcrumbs('Каталог')
            +catalogue-head('in-line')
            div.catalogue__inner
                include ../../modules/catalogue-aside/catalogue-aside
                div.catalogue-content
                    div.catalogue-content__wrapper.catalogue-content__wrapper--in-line
                        - for (let x = 0; x < 16; x++)
                        +cart(inLine='in-line')
                    div.catalogue-content__more.catalogue-content__more--active
                        p.catalogue-content__more-text Секундочку, загружается...
                        +btn-main(theme='blue', class='btn--default') Ещё товары
                        +btn-to-top('catalogue-content__more-to-top')